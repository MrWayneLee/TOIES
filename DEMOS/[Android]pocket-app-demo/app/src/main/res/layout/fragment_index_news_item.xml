<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:background="#dddddd"
        android:id="@+id/lv_fragment_index_news_image"
        android:layout_margin="10dp"
        android:layout_width="380px"
        android:layout_height="91dp" />

    <TextView
        android:id="@+id/tv_fragment_index_news_title"
        android:textColor="#000"
        android:text="新闻标题"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/lv_fragment_index_news_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="17dp"
        android:text="新闻副标题"
        android:id="@+id/tv_fragment_index_news_subtitle"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_fragment_index_news_title"
        android:layout_toRightOf="@+id/lv_fragment_index_news_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="13dp"
        android:text="发布时间"
        android:id="@+id/tv_fragment_index_news_time"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_fragment_index_news_subtitle"
        android:layout_toRightOf="@+id/lv_fragment_index_news_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
