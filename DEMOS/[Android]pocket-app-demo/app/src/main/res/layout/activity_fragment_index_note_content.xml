<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_index_note_contentActivity">

    <RelativeLayout
        android:background="#731527"
        android:id="@+id/rl_fragmentindexnotecontent_title"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/fragmentindexnotecontent_title"
            android:textColor="#ffffff"
            android:text="便   利   贴   内   容"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingTop="20dp"
            android:src="@drawable/icon_back"
            android:id="@+id/btn_fragmentindexnotecontent_back"
            android:background="@drawable/style_button_back"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_fragmentindexnotecontent_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_fragmentindexnotecontent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/v_fragmentindexnoteonctent_line"
            android:background="#999"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_fragmentindexnotecontent_title"
            android:layout_width="180dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginLeft="30dp"
            android:textColor="#111"
            android:textSize="18dp"
            android:id="@+id/tv_fragmentindexnotecontent_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/v_fragmentindexnoteonctent_line"
            android:layout_width="300dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>