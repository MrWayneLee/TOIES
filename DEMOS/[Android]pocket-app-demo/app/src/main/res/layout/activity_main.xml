<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="#731527"
        android:id="@+id/rl_mainactivity_title"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="登         录"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_mainactivity_title"
        android:background="#90ffe5e5"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/app_logo"
            android:layout_marginTop="30dp"
            android:id="@+id/iv_mainactivity_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_mainactivity_username"
            android:layout_below="@+id/iv_mainactivity_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_mainactivity_username"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/style_edittext"
                android:hint="请输入用户名"
                android:maxLength="4"
                android:maxLines="1"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/iv_mainactivity_username"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_user"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:layout_marginLeft="220dp"
                android:layout_toEndOf="@+id/iv_mainactivity_username"
                android:id="@+id/btn_mainactivity_clear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_clear" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mainactivity_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_mainactivity_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:background="@drawable/style_edittext"
                android:inputType="number"
                android:maxLength="8"
                android:maxLines="1"
                android:id="@+id/ed_mainactivity_password"
                android:textAlignment="center"
                android:hint="请输入密码"
                android:layout_width="300dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/iv_mainactivity_password"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_password"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <CheckBox
                android:layout_toEndOf="@+id/iv_mainactivity_password"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="10dp"
                style="@style/CheckboxStyle"
                android:checked="true"
                android:id="@+id/cb_mainactivity_hide"
                android:layout_height="20dp"
                android:layout_width="20dp" />

        </RelativeLayout>

        <Button
            android:background="@drawable/style_botton"
            android:text="登         录"
            android:textSize="20dp"
            android:id="@+id/btn_mainactivity_login"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rl_mainactivity_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:text="欢迎使用掌上APP"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>